block vars

- var restaurantMenuItems=[{name:"Холодные закуски",id:"coldSnacks"},{name:"Горячие закуски",id:"hotSnacks"},{name:"Мясные блюда",id:"meatFood"},{name:"Супы",id:"soups"},{name:"Рыбные блюда",id:"fishFood"},{name:"Гриль меню",id:"grillMenu"},{name:"Фирменые блюда",id:"brandedFood"},{name:"Напитки",id:"drinks"}]
- var restaurantDocumentationItems=[{name:"Пользовательское соглашение",link:"#"},{name:"Карта сайта",link:"#"},{name:"Политика конфиденциальности",link:"#"}]
- var restaurantDetailedInformation=[{name:"О ресторане",link:"/about"},{name:"Условия доставки",link:"/delivery.html"},{name:"Возврат товара",link:"/purchaseReturn"},{name:"Акции",link:"/promotions.html"}]

doctype html
html(lang="ru")
  head
    meta(charset="UTF-8")
    meta(name="viewport"
      content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0")
    meta(http-equiv="X-UA-Compatible" content="ie=edge")
    link(rel="stylesheet" href="styles/global.css")
    block head
    script(src="scripts/common.js" defer)
    title #{title}
  body
    div.wrapper
      header.header
        div.header__top-section
          a.logo.header__logo(href="/") LOGOS
          form
            div.search.header__search
              div.headers-icon.search__location-icon
              input.search__input(type="text" name="search" placeholder="Введите адрес доставки")
              div.headers-icon.search__scope-icon
          div.contacts-small
            div.contacts-small__phone-icon-bg
              div.contacts-small__phone-icon
            div.contacts-small__info
              div.contacts-small__title Контакты:
              div.contacts-small__phone-number +7 (917) 510-57-59
          a.header__link(href="/basket.html")
            button.button.header__basket
              span Корзина
              div.item-counter
                div.item-counter__amount(id="amountItemsInBucket") 0
        if bannerSrc
          div.header__banner-section
            div.header__banner-shadow
            img.header__banner-img(src=bannerSrc)
        nav.header__bottom-section
          ul.restaurant-menu
              each menuItem in restaurantMenuItems
                li.restaurant-menu__item
                  a.restaurant-menu__link(to=menuItem.id) #{menuItem.name}
      main
        if showBackButton
          button.back-button
            svg(width="26" height="26" viewBox="0 0 26 26" fill="none" xmlns="http://www.w3.org/2000/svg")
              circle(cx="13" cy="13" r="13" fill="url(#paint0_linear_63_954)")
              path(d="M9.46967 12.4697C9.17678 12.7626 9.17678 13.2374 9.46967 13.5303L14.2426 18.3033C14.5355 18.5962 15.0104 18.5962 15.3033 18.3033C15.5962 18.0104 15.5962 17.5355 15.3033 17.2426L11.0607 13L15.3033 8.75736C15.5962 8.46447 15.5962 7.98959 15.3033 7.6967C15.0104 7.40381 14.5355 7.40381 14.2426 7.6967L9.46967 12.4697ZM11 12.25L10 12.25L10 13.75L11 13.75L11 12.25Z" fill="white")
              defs
                linearGradient(id="paint0_linear_63_954" x1="1.25806" y1="1.47727" x2="29.0993" y2="14.4163" gradientUnits="userSpaceOnUse")
                  stop(stop-color="#618967")
                  stop(offset="1" stop-color="#72A479")
            span Вернуться назад
        block content
      footer.footer
        div.footer__left-section
          a.logo.footer__logo(href="/") LOGOS
          div.company-teg
            span © ООО СК «АПШЕРОН»
            br
            span Все права защищены. 2010-2020
          ul.documentation-block
              each documentationItem in restaurantDocumentationItems
                li.documentation-block__item
                  a.documentation-block__link(href=documentationItem.link) #{documentationItem.name}
        div.footer__right-section
          ul.detailed-information-block
              each detailedInformation in restaurantDetailedInformation
                li.detailed-information-block__item
                  a.detailed-information-block__link(href=detailedInformation.link) #{detailedInformation.name}